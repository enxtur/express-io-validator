{
  "name": "express-io-validator",
  "version": "0.0.2",
  "description": "Express middleware for type-safe runtime validation using io-ts. TypeScript-first with full type inference.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "tsx --test test/validation.spec.ts",
    "dev": "nodemon --watch src --watch sample --exec ts-node sample/index.ts"
  },
  "keywords": [
    "express",
    "middleware",
    "validation",
    "io-ts",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enxtur/express-io-validator.git"
  },
  "author": "enxtur",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.19.25",
    "body-parser": "^2.2.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "express": "^5.1.0",
    "fp-ts": "^2.16.11",
    "io-ts": "^2.2.22"
  }
}
